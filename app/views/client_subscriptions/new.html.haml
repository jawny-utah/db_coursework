.centered-div
  %h1 Add new client subscription
  = form_with model: ClientSubscription.new do |form|
    .inputs-wrapper
      = form.label :client_id
      = form.select :client_id, options_for_select(Client.all.map {|k| [k.full_name, k.id]}), required: true
    .inputs-wrapper
      = form.label :subscription_id
      = form.select :subscription_id, options_for_select(Subscription.all.map {|k| [k.name, k.id]}), required: true
    .inputs-wrapper
      = form.label :started_at
      = form.datetime_field :started_at
    .inputs-wrapper
      = form.label :expires_at
      = form.datetime_field :expires_at
    .submit-buttons-wrapper
      = link_to "Back", clients_subscriptions_homepages_path
      = form.submit "Save"
