.centered-div
  %h1 Edit Order
  = form_with model: @order do |form|
    .inputs-wrapper
      = form.label :scooter_in_work_id
      = form.select :scooter_in_work_id, options_from_collection_for_select(ScooterInWork.all, :id, :model, @order.scooter_in_work_id), required: true
    .inputs-wrapper
      = form.label :client_id
      = form.select :client_id, options_from_collection_for_select(Client.all, :id, :full_name, @order.client_id), required: true
    .inputs-wrapper
      = form.label :started_at
      = form.datetime_field :started_at
    .inputs-wrapper
      = form.label :ended_at
      = form.datetime_field :ended_at
    .inputs-wrapper
      = form.label :total_sum
      = form.text_field :total_sum
    .submit-buttons-wrapper
      = link_to "Back", orders_homepages_path
      = form.submit "Save"
