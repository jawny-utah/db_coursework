.table-info-wrapper
  %div
    %h1 Client Subscriptions
    .total-records-count
      %span Total count
      %span= ClientSubscription.all.length
  = link_to "Add new client subscriptions", new_client_subscription_path, class: "small-btn create-btn"
%table
  %thead
    %tr
      %th Client
      %th Subscription
      %th Started At
      %th Expires At
      %th
  %tbody
    - ClientSubscription.all.each do |sub|
      %tr
        %td= sub.client&.full_name
        %td= sub.subscription.name
        %td= sub.started_at
        %td= sub.expires_at
        = render partial: "shared/edit_delete_button_tr", locals: { edit_path: edit_client_subscription_path(sub),
                                                                    delete_path: client_subscription_path(sub) }
